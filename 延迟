function $(id){	return typeof id==='string'?document.getElementById(id):id;} window.onload=tab; 	function tab(){//表示索引为第一个，也就第一个li是高亮，请看HTML文件，高亮class已变成第一个li【总之想让那个先高亮，就改index的值，但自动切换介意第一个开始	var timer=null;	var index=0;	var titles=$('tab-top').getElementsByTagName('li');	var divs=$('tab-bottom').getElementsByTagName('div');			for(var i=0;i<titles.length;i++){		titles[i].id=i;		//鼠标划动		titles[i].onmouseover=function(){			clearInterval(timer);			changeOption(this.id);			}		//鼠标离开			titles[i].onmouseout=function(){		 /* timer=setInterval(function(){		index++;		if(index>=titles.length){		index=0;				}			changeOption(index); },2000);	*/     timer=setInterval(autoplay,2000);	} } //在制定一个定时器之前，将准备中的定时器关掉 if(timer){	 clearInterval(timer);	 timer=null; }	//自动切换			timer=setInterval(		/*index++;		if(index>=titles.length){		index=0;				}			changeOption(index);*/	autoplay,2000);  //公用函数1 function autoplay(){ index++;		if(index>=titles.length){		index=0;				}			changeOption(index); } //公用函数2	function changeOption(curindex){		for(var j=0;j<titles.length;j++){				titles[j].className=null;						divs[j].style.display="none";			}		titles[curindex].className="select";		divs[curindex].style.display="block";		//解决鼠标滑过第三个li,之后离开，它会从第二个开始自动切换，而不是切换到第四个，因为鼠标滑过产生的this和自动切换的index的值不同，一旦鼠标离开，就要执行下一个index		index=curindex;					}	}
